<%- include('./partials/header') %>

<section class="vh-100 gradient-custom">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card bg-dark text-white" style="border-radius: 1rem;">
          <div class="card-body p-5 text-center">

            <div class="mb-md-5 mt-md-4 pb-5">
              <h2 class="fw-bold mb-2 text-uppercase">Redacted Content</h2>
              <p class="text-white-50 mb-5">Original content with specified words redacted</p>

              <div data-mdb-input-init class="form-outline form-white mb-4">
                <textarea class="form-control" id="originalContent" rows="4" readonly><%= originalContent %></textarea>
                <label class="form-label" for="originalContent">Original Content</label>
              </div>

              <div data-mdb-input-init class="form-outline form-white mb-4">
                <textarea class="form-control" id="redactedContent" rows="4" readonly><%= redactedContent %></textarea>
                <label class="form-label" for="redactedContent">Redacted Content</label>
              </div>

              <a href="/" class="btn btn-outline-light btn-lg px-5">Back to Form</a>
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<%- include('./partials/footer') %>
